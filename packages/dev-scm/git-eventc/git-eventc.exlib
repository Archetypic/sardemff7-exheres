require github [ user=sardemff7 ] tuxfamily [ group=eventd suffix=tar.xz ]

SUMMARY="A small project to bridge Git repositories to eventd"
HOMEPAGE="http://git-eventc.eventd.org"

LICENCES="GPL-3"
SLOT="0"
MYOPTIONS="systemd"

DEPENDENCIES="
    build+run:
       core/json-glib
       dev-libs/glib:2[>=2.42]
       dev-scm/libgit2[>=0.23.0]
       gnome-desktop/libsoup[>=2.48]
       net/eventd[>=0.6]
       systemd? ( sys-apps/systemd )
"

DEFAULT_SRC_CONFIGURE_OPTION_ENABLES=(
    systemd
)

