#
# CORE CONFIGURATION OPTIONS
#
readconfig                1
writeconfig               0

#
# CORE SEARCH PATH OPTIONS
#
rompath                   $HOME/.@PN@/roms;/usr/share/@PN@/roms
hashpath                  $HOME/.@PN@/hash;/usr/share/@PN@/hash
samplepath                $HOME/.@PN@/sample;/usr/share/@PN@/sample
artpath                   $HOME/.@PN@/artwork;/usr/share/@PN@/artwork
ctrlrpath                 $HOME/.@PN@/ctrlr;/usr/share/@PN@/ctrlr
inipath                   $HOME/.@PN@;/etc/@PN@
fontpath                  $HOME/.@PN@;/usr/share/@PN@
cheatpath                 $HOME/.@PN@/cheat;/usr/share/@PN@/cheat
crosshairpath             $HOME/.@PN@/crosshair;/usr/share/@PN@/crosshair

#
# CORE OUTPUT DIRECTORY OPTIONS
#
cfg_directory             $HOME/.@PN@/cfg
nvram_directory           $HOME/.@PN@/nvram
memcard_directory         $HOME/.@PN@/memcard
input_directory           $HOME/.@PN@/inp
state_directory           $HOME/.@PN@/sta
snapshot_directory        $HOME/.@PN@/snap
diff_directory            $HOME/.@PN@/diff
comment_directory         $HOME/.@PN@/comments

#
# VIDEO OPTIONS
#
video                     @VIDEO@

#
# SDL KEYBOARD MAPPING
#
# If you are using one of the available non-us keyboard layouts
# set keymap to 1 and uncomment the appropriate line below
keymap                    0
