#keymap_file               /usr/share/mess/keymaps/km_ch_LINUX.txt
#keymap_file               /usr/share/mess/keymaps/km_de_LINUX.txt
#keymap_file               /usr/share/mess/keymaps/km_fr_LINUX.txt
#keymap_file               /usr/share/mess/keymaps/km_it_LINUX.txt
