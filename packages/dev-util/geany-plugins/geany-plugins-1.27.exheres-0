require geany-plugins
require autotools [ supported_autoconf=[ 2.5 ] supported_automake=[ 1.15 1.13 1.12 1.11 ] ]

DOWNLOADS="http://plugins.geany.org/${PN}/${PNV}.tar.bz2"

PLATFORMS="~amd64"

AT_M4DIR=( build build/cache build/bundled geanypy/m4 )

DEFAULT_SRC_PREPARE_PATCHES=(
    "${FILES}"/gtk3-support-backport.patch
)

src_prepare() {
    edo rm build/cache/*
    autotools_src_prepare
    edo intltoolize --force --copy --automake
}

