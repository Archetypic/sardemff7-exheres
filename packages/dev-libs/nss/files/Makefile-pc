include Makefile

MAJOR_VERSION = $(shell sed -n -r -e 's|.*NSS_([0-9]+)_[0-9]+(_[0-9])?+.*|\1|p' TAG-INFO)
VERSION = $(shell sed -n -r -e 's|.*NSS_([0-9]+_[0-9]+(_[0-9]+)?).*|\1|' -e 's|_|.|gp' TAG-INFO)
NSPR_VERSION=$(shell sed -n -r -e 's|.*NSPR_([0-9]+_[0-9]+(_[0-9]+)?).*|\1|' -e 's|_|.|gp'  $(CORE_DEPTH)/../nsprpub/TAG-INFO)

install_nss.pc:: nss.pc
	mkdir -p $(DESTDIR)/usr/$(LIBDIR)/pkgconfig
	install -m 0644 $< $(DESTDIR)/usr/$(LIBDIR)/pkgconfig

nss.pc: nss.pc.in
	sed \
		-e 's:@LIBDIR@:$(LIBDIR):' \
		-e 's:@MAJOR_VERSION@:$(MAJOR_VERSION):' \
		-e 's:@VERSION@:$(VERSION):' \
		-e 's:@NSPR_VERSION@:$(NSPR_VERSION):' \
		$< > $@
